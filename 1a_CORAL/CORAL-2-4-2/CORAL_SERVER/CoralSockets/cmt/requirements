# Fix for Darwin link warnings
macro_append CoralSockets_linkopts '' \
  target-darwin ' -dylib_file libboost_thread-$(Boost_file_version).dylib:$(Boost_home)/lib/libboost_thread-$(Boost_file_version).dylib'

